def menu_ventas():
    print("Menu Ventas")
    print("-------------")
    print("1: ID del producto:")
    print("2: Mostrar producto en disponibilidad:")
    print("3: Precio del producto:")
    print("4: Descuento del producto:")
    print("5: Archivar producto vendido :")
    opcion= int (input("Ingrese opcion deseada:"))
    return opcion
    
def validacion(opcion):   
    while opcion !=-1 and opcion < 1 or opcion > 5:
        print("Debe ingresar rangos de opcion del 1 al 5: ")
        menu_ventas()
        opcion=int(input("Ingrese nuevamente una opcion del Menu ventas: "))
    return opcion

def matriz_ventas(lista_ventas):
    datos=[]
    for i in range(len(lista_ventas)):
        codigo=len(datos)+1
        descripcion=input("Ingrese nombre del medicamento")
        precio_unitario=int(input("Ingrese precio del medicamento"))
        cantidad=int(input("Ingrese cantidad de medicamentos:"))
        producto=[codigo,descripcion,precio_unitario,cantidad,precio_unitario*cantidad]
        datos.append(producto)
    return datos

def mostrar_matriz(titulos,matriz):
    filas=len(matriz)
    columnas=len(matriz[0])
    for titulo in titulos:
        print(titulo,end="\t")
    print()
    for fila in range (filas):
        for columna in range (columnas):
            print(matriz[fila][columna],end="\t")
        print()
    
            
        
        
