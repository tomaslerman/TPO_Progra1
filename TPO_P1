    print("3: Control de Stock: ")
    print("4: Registrar producto proximo a vencer: ")
    print("5: Registro de compra de producto:")
    print("6: Registro de venta de producto: ")

def menu_reportes():
    print(" Menu Reportes")
    print("---------------")
    print("1: ID del usuario: ")
    print("2: Reporte de ventas: ")
    print("3: Reporte de recetas: ")
    print("4: Reporte de stock vendido : ")
    
def menu():  
    opcion= menu_ventas() 
    validacion(opcion)
    while opcion!=-1:
        if opcion==1:
            pass
        elif opcion==2:
            pass
        elif opcion==3:
            producto=int(input("Ingrese cantidad de productos: "))
            titulos=["Codigo","Medicamento", "Precio", "Cantidad subtotal"]
            lista_ventas.append(producto)
            matriz=matriz_ventas(lista_ventas)
            print(matriz)
            mostrar_matriz(titulos,matriz)
            
            
            
        


#programa principal


lista_ventas=[]
lista_recetas=[]
lista_productos=[]

menu()
    